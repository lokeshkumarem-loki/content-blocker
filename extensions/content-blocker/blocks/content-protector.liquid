{% if block.settings.enable_protection %}
  <script src="{{ 'content-protect.js' | asset_url }}" defer></script>
{% endif %}

{% schema %}
{
  "name": "Content Protection",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_protection",
      "label": "Enable content protection",
      "default": true
    }
  ]
}
{% endschema %}
